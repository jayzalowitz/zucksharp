{
    "name": "zucksharp/zucksharp",
    "description": "Move Fast and Break Things - A PHP-inspired esoteric programming language",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "The Zucc",
            "email": "senator@we-run-ads.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "ZuckSharp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZuckSharp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/zuck"
    ],
    "keywords": [
        "esoteric",
        "programming-language",
        "php",
        "zuckerberg",
        "meta",
        "facebook",
        "satire"
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse src -l 5"
    },
    "config": {
        "sort-packages": true
    }
}
